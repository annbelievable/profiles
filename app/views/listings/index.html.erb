<p id="notice"><%= notice %></p>

<h1>Listing Listings</h1>

<%= form_for_filterrific @filterrific do |f| %>
  <div>
    Category
    <%= f.select(:category, @filterrific.select_options[:category], { include_blank: '- Any -' }) %>
  </div>
  <div>
    Title
    <%= f.text_field(:title) %>
  </div>
  <div>
    Location
    <%= f.text_field(:location) %>
  </div>
  <div>
    Rooms
    <%= f.select(:room_nums, @filterrific.select_options[:room_nums], { include_blank: '- Any -' }) %>
  </div>
  <div>
    Bathrooms
    <%= f.select(:bathroom_nums, @filterrific.select_options[:bathroom_nums], { include_blank: '- Any -' }) %>
  </div>
  <div>
    Sorted by
    <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by]) %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Title</th>
      <th>Location</th>
      <th>Room nums</th>
      <th>Bathroom nums</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.category %></td>
        <td><%= listing.title %></td>
        <td><%= listing.location %></td>
        <td><%= listing.room_nums %></td>
        <td><%= listing.bathroom_nums %></td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_listing_path %>
